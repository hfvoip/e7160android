<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/parent_container"
    android:weightSum="100">


    <FrameLayout
        android:id="@+id/param_frame"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="95"
        />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5"
        android:visibility="gone"
        android:orientation="horizontal"
        tools:context="com.jhearing.e7160sl.Params.ParameterFragment">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/ap_black"
            android:orientation="horizontal"
            android:weightSum="100">

            <ImageView
                android:id="@+id/ear_left"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@color/colorPrimary"
                android:clickable="true"
                app:srcCompat="@mipmap/ear_l_grey" />

            <ImageView
                android:id="@+id/ear_right"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="50"
                android:background="@color/ap_gray"
                app:srcCompat="@mipmap/ear_r_grey" />


        </TableRow>
    </LinearLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>
